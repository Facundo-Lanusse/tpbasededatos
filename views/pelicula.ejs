<body>
  <div class="container">
    <h1><%= movie.title %></h1>
    <h3>Fecha: <%= movie.release_date %></h3>

    <h3>Géneros:</h3>
    <ul>
      <% movie.genres.forEach((genre) => { %>
        <li><%= genre %></li>
      <% }); %>
    </ul>

    <h3>Compañía de Producción:</h3>
    <ul>
      <% movie.company_name.forEach((company) => { %>
        <li><%= company %></li>
      <% }); %>
    </ul>

    <h3>Idioma de la Película:</h3>
    <p><%= movie.languages %></p>

    <h3>País de Producción:</h3>
    <ul>
      <% movie.countries.forEach((country) => { %>
        <li><%= country %></li>
      <% }); %>
    </ul>

    <h3>Dirigida por:</h3>
    <ul>
      <% movie.directors.forEach((director) => { %>
        <li>
          <a href="/director/<%= director.crew_member_id %>"><%= director.crew_member_name %></a>
        </li>
      <% }); %>
    </ul>

    <h3>Escrita por:</h3>
    <ul>
      <% movie.writers.forEach((writer) => { %>
        <li>
          <a href="/writer/<%= writer.crew_member_id %>"><%= writer.crew_member_name %></a>
        </li>
      <% }); %>
    </ul>

    <h3>Argumento:</h3>
    <div id="overview"><p><%= movie.overview %></p></div>

    <h3>Elenco:</h3>
    <ul>
      <% movie.cast.sort((a, b) => a.cast_order - b.cast_order).forEach((actor) => { %>
        <li><a href="/actor/<%= actor.actor_id %>"><%= actor.actor_name %></a> - <%= actor.character_name %></li>
      <% }); %>
    </ul>

    <h3>Palabras Clave:</h3>
    <ul>
      <% movie.keywords.forEach((keyword) => { %>
        <li><%= keyword %></li>
      <% }); %>
    </ul>

    <div id="inicio"><a href="/">Inicio</a></div>
  </div>
