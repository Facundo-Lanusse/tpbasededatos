        direction: rtl;
        display: flex;
        justify-content: center;
        font-size: 2em;
    }

    .star-rating input[type="radio"] {
        display: none;
    }

    .star-rating label {
        color: #ccc;
        cursor: pointer;
    }

    /* Cambiar el color de las estrellas al pasar el cursor y al seleccionar */
