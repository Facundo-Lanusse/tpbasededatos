<!DOCTYPE html>
<html>
<head>
  <title><%= movie.title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h1><%= movie.title %></h1>
<h3>Fecha: <%= movie.release_date %></h3>
<h3>Géneros:</h3>
<ul>
  <%
  const uniqueGenres = [...new Set(movie.genres)]; // Eliminar duplicados
  uniqueGenres.forEach((genre) => { %>
    <li><%= genre %></li>
  <% }); %>
</ul>

<h3>Compañía de Producción:</h3>
<p><%= movie.production_company %></p>

<h3>Idioma de la Película:</h3>
<p><%= movie.movie_language %></p>

<h3>País de Producción:</h3>
<ul>
  <%
  const uniqueCountries = [...new Set(movie.production_countries)]; // Eliminar duplicados
  uniqueCountries.forEach((country) => { %>
    <li><%= country %></li>
  <% }); %>
</ul>

<h3>Dirigida por:</h3>
<ul>
  <% movie.directors.forEach((director) => { %>
    <li>
      <a href="/director/<%= director.crew_member_id %>"><%= director.crew_member_name %></a>
    </li>
  <% }); %>
</ul>

<h3>Escrita por:</h3>
<ul>
  <% movie.writers.forEach((writer) => { %>
    <li>
      <a href="/writer/<%= writer.crew_member_id %>"><%= writer.crew_member_name %></a>
    </li>
  <% }); %>
</ul>

<h3>Argumento:</h3>
<div id="overview"><p><%= movie.overview %></p></div>

<h3>Elenco:</h3>
<ul>
  <% movie.cast.sort((a, b) => a.cast_order - b.cast_order).forEach((actor) => { %>
    <li><a href="/actor/<%= actor.actor_id %>"><%= actor.actor_name %></a> - <%= actor.character_name %></li>
  <% }); %>
</ul>

<h3>Crew:</h3>
<ul>
  <% movie.crew.forEach((crewMember) => { %>
    <li>
      <%= crewMember.crew_member_name %> - <%= crewMember.department_name %>
      (<%= crewMember.job %>)
    </li>
  <% }); %>
</ul>

<h3>Palabras Clave:</h3>
<ul>
  <%
  const uniqueKeywords = [...new Set(movie.keywords)]; // Eliminar duplicados
  uniqueKeywords.forEach((keyword) => { %>
    <li><%= keyword %></li>
  <% }); %>
</ul>

<div id="inicio"><a href="/">Inicio</a></div>
</body>
</html>
